<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <!--For EditTexts-->
        <item name="colorControlNormal">#eaeaea</item>
        <item name="colorControlActivated">#6ecfe7</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/inputFontColor</item>
        <item name="android:textColorSecondary">@color/inputHintFontColor</item>
        <item name="android:textColor">@color/gradientColorTwo</item>

        <!--For EditTexts-->
        <item name="colorControlNormal">#eaeaea</item>
        <item name="colorControlActivated">#6ecfe7</item>
    </style>

</resources>
